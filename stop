#!/bin/bash

set -e

cd "$(dirname "$0")"

show_services() {
  echo
  echo "Available services:"
  echo
  echo "cloudflared"
  echo "portainer"
  echo "all"
  echo
  echo "Usage examples:"
  echo "./stop cloudflared"
  echo "./stop cloudflared portainer"
  echo "./stop all"
}

FILES=()
REMOVE_VOLUMES=false
DOWN_ARGS=()

for arg in "$@"; do
  case "$arg" in
  cloudflared)
    FILES+=("-f" "compose.cloudflared.yaml")
    ;;
  portainer)
    FILES+=("-f" "compose.portainer.yaml")
    ;;
  all)
    FILES+=("-f" "compose.cloudflared.yaml" "-f" "compose.portainer.yaml")
    ;;
  -v|--volumes)
    REMOVE_VOLUMES=true
    ;;
  *)
    echo "$arg is an unknown service"
    show_services
    exit 1
    ;;
  esac
done

if [ ${#FILES[@]} -eq 0 ]; then
  echo "Error: no services specified"
  show_services
  exit 1
fi

if [ "$REMOVE_VOLUMES" = true ]; then
  DOWN_ARGS+=("-v")
fi

if ! docker compose "${FILES[@]}" down "${DOWN_ARGS[@]}"; then
  echo "Error occurred while stopping services"
  exit 1
fi
